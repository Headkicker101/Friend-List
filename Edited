CREATE TABLE friends (
id INTEGER,
name TEXT,
birthday DATE
);

INSERT INTO friends (id, name, birthday)
VALUES (1, 'Jane Doe', '1990-05-30');

INSERT INTO friends (id, name, birthday)
VALUES (2, 'Charles Fitzmaurice', '1993-02-18');

INSERT INTO friends (id, name, birthday)
VALUES (3, 'Nihal Pausker', '1988-04-08');

UPDATE friends
SET name = 'Jane Smith'
WHERE id = 1;

ALTER TABLE friends
ADD COLUMN email TEXT;

UPDATE friends
SET email = 'jane@codeacademy.com'
WHERE id = 1;

UPDATE friends
SET email = 'cfitzmaurice777@gmail.com'
WHERE id = 2;

DELETE FROM friends
WHERE id = 1;

SELECT * FROM friends;

